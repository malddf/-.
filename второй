#включить <stdio.h> 
#включить <sys/types.h> 
#включить <unistd.h> 
int main() 
{ 
    переключатель (вилка())
    {
    случай 0:
        printf("Привет от ребенка, мой PID: %d\n", getpid());
        перерыв;
    по умолчанию:
        printf("Привет от родителя, мой PID: %d\n", getpid());
        перерыв;
    }
    возврат 0; 
}
